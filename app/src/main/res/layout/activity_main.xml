<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient"
            android:padding="24dp"
            android:layout_marginBottom="32dp"
            android:elevation="4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/goldleaf_logo"
                android:layout_marginBottom="12dp"
                android:contentDescription="Goldleaf Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goldleaf"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:letterSpacing="0.05"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The All in One Financial Planner"
                android:textSize="14sp"
                android:textColor="#558B2F"
                android:alpha="0.9" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="20dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/message_bg"
                    android:padding="12dp"
                    android:background="@drawable/circle_bg_light_green"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Chat Bot Icon" />

                <Button
                    android:id="@+id/btnChatBot"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Chat Bot"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#43A047"
                    android:elevation="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_budget"
                    android:padding="8dp"
                    android:background="@drawable/circle_bg_light_green"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Budget Planner Icon" />

                <Button
                    android:id="@+id/btnBudgetPlanner"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Budget Planner"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:elevation="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_stats"
                    android:padding="12dp"
                    android:background="@drawable/circle_bg_light_green"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Spending Dashboard Icon" />

                <Button
                    android:id="@+id/btnSpendingDashboard"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Spending Dashboard"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#66BB6A"
                    android:elevation="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bill Reminder Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_bills"
                    android:padding="8dp"
                    android:background="@drawable/circle_bg_light_green"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Bill Reminder Icon" />

                <Button
                    android:id="@+id/btnBillReminder"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Bill Reminder"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:elevation="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_debt"
                    android:padding="8dp"
                    android:background="@drawable/circle_bg_light_green"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Debt Reminder Icon" />

                <Button
                    android:id="@+id/btnDebtReminder"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Debt Reminder"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#43A047"
                    android:elevation="0dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>