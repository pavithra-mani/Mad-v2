<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F8F9FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finance Assistant"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnChatBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Bot"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBudgetPlanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Planner"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSpendingDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spending Dashboard"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBillReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill Reminder"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnDebtReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debt Reminder" />

    </LinearLayout>

</LinearLayout>